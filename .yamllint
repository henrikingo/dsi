extends: default

rules:
  colons:
    max-spaces-before: 0
    max-spaces-after: 1
  line-length:
    max: 1000
  indentation: disable
  comments:
    level: error
    require-starting-space: true
  comments-indentation:
    level: error
  document-start:
    level: error
    present: false
  new-line-at-end-of-file: disable
  empty-lines: disable
  trailing-spaces: enable
